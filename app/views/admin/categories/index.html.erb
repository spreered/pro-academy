<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <form>
      <div class="input-group mb-3">
        <input type="text" class="form-control" id="inlineFormInputName2" placeholder="Create Category name">
        <div class="input-group-append">
          <button class="btn btn-secondary" type="button">Submit</button>
        </div>
      </div>
    </form>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="category-list-item list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= category.name %>

          <span class="category-manage">
            <a class="badge badge-info"><%= fa_icon "file-text-o"%></a> 
            <a class="badge badge-danger"><%= fa_icon "trash-o"%></a> 
          </span>
        </li>
      <%end%>  
    </ul>
  </div>
</div>
