<div class="row justify-content-center mt-4">
  <div class="col-lg-6">
    <%= form_with model: [:admin, @new_category], id:'category-form' do |f| %>
      <div class="input-group mb-3">
        <%=f.text_field :name, class: 'form-control', placeholder: 'Create Category'%>
        <div class="input-group-append">
          <%=f.submit "Submit", class: 'btn btn-secondary'%>
        </div>
      </div>
    <%end%>
    <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="category-list-item list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= category.name %>

          <span class="category-manage">
            <a class="badge badge-info"><%= fa_icon "file-text-o"%></a> 
            <a class="badge badge-danger"><%= fa_icon "trash-o"%></a> 
          </span>
        </li>
      <%end%>  
    </ul>
  </div>
</div>
