<%= form_with model: [:admin, course], local: true do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', required: true%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :category_id, 'Category', class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]}, {}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :status, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.select :status, Course.statuses.keys.map{|s| [s.humanize, s]}, {}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :slug, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.text_field :slug, class: 'form-control', required: true%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :price, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-6">
      <%= f.text_field :price, class: 'form-control', required: true%>
    </div>
    <div class="col-sm-4">
      <%= f.select :price_currency, [ ['TWD', 'TWD'],['USD', 'USD'] ], {}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :duration, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.select :duration, (1..31), {}, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :description, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit 'submit', class: 'btn btn-primary'%>
    </div>
  </div>
<%end%>
